<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants" >

    <View
        android:id="@+id/user_color"
        android:layout_width="10sp"
        android:layout_height="match_parent"
        android:minHeight="@dimen/song_height"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="4sp" >
    </View>

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_color"
        android:layout_toLeftOf="@+id/btn_add_to_playlist"
        android:paddingTop="6sp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textSize="16sp" >
    </TextView>

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_color"
        android:layout_below="@id/title"
        android:layout_toLeftOf="@id/btn_add_to_playlist">
    	
    	<TextView
	        android:id="@+id/artist"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingRight="2sp"
	        android:singleLine="true"
        	android:ellipsize="marquee"
	        android:textSize="12sp">
	    </TextView>
	    
	     <TextView
	        android:id="@+id/division"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingRight="2sp"
	        android:maxLines="1"
	        android:textSize="12sp"
	        android:text="@string/song_item_division" >
	    </TextView>
	
	    <TextView
	        android:id="@+id/album"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
        	android:ellipsize="marquee"
	        android:textSize="12sp" >
	    </TextView>
        
    </LinearLayout>
        
    <ImageButton
        android:id="@id/btn_add_to_playlist"
        android:src="@drawable/add_to_queue"
        android:layout_width = "wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:contentDescription="@string/add_to_playlist"
        android:background="@color/transparent"/>
    
     <ImageButton
        android:id="@+id/btn_remove_from_playlist"
        android:src="@drawable/content_remove"
        android:layout_width = "wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingRight="4sp"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:background="@color/transparent"/>
    
</RelativeLayout>
