<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingActivity" >

    <TextView
        android:id="@+id/txt_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/welcome_text" />

    <Button
        android:id="@+id/btn_fan"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_greeting"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:text="@string/join_network" />

    <Button
        android:id="@+id/btn_host"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_greeting"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="86dp"
        android:text="@string/create_network" />
    
    <Button
        android:id="@+id/btn_playlist"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_fan"
        android:layout_centerHorizontal="true"
        android:text="@string/playlist" />

</RelativeLayout>