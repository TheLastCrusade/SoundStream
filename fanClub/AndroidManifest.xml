<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lastcrusade.fanclub"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/fanclub_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.lastcrusade.fanclub.LandingActivity"
            android:label="@string/app_name" >           
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lastcrusade.fanclub.FanActivity"
            android:label="@string/title_activity_fan" >
        </activity>
        <activity
            android:name="com.lastcrusade.fanclub.HostActivity"
            android:label="@string/title_activity_host" >
        </activity>
        <activity
            android:name="com.lastcrusade.fanclub.PlaylistActivity"
            android:label="@string/title_activity_playlist" >
        </activity>
        <service
            android:name="com.lastcrusade.fanclub.service.MusicLibraryService"
            android:exported="false"
            android:label="Music Library"
            />
    </application>

</manifest>